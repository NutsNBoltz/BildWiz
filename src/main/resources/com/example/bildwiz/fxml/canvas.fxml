<AnchorPane fx:id="root" prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bildwiz.controllers.CanvasController">


    
    <ImageView fx:id="selectedImage" fitHeight="644.0" fitWidth="831.0" layoutX="28.0" layoutY="38.0">
