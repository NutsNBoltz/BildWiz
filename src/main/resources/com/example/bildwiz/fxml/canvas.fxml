    <Button fx:id="selectImageButton" layoutX="272.0" layoutY="286.0" onAction="#OnSelectImageButtonClick" prefHeight="17.0" prefWidth="205.0" text="Select Image" />


    <Button fx:id="changeImageButton" layoutX="879.0" layoutY="38.0" onAction="#OnChangeImageButtonClick" prefHeight="48.0" prefWidth="168.0" text="Change Image" visible="false" />
    <TextField fx:id="imageURL" layoutX="40.0" layoutY="320.0" prefHeight="48.0" prefWidth="716.0" />


    <Button fx:id="saveImageButton" layoutX="879.0" layoutY="650.0" onAction="#OnSaveImageButtonClick" prefHeight="48.0" prefWidth="168.0" text="Save Image" visible="false" />

