<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>

<fx:root type="StackPane" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">

    <StackPane style="-fx-background-color: #ffffff;">

        <VBox alignment="CENTER" spacing="15">
            <ImageView fx:id="imageView" fitWidth="120" fitHeight="120" preserveRatio="true"/>
            <Label fx:id="filterName" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label fx:id="filterDescription" wrapText="true" style="-fx-font-size: 12px;"/>
        </VBox>

    </StackPane>

</fx:root>